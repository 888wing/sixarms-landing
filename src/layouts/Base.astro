---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "AI-powered development progress tracker. Stop writing daily logs manually - let AI track your commits and generate meaningful summaries.",
  ogImage = "/images/og-image.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  
  <!-- Canonical -->
  <link rel="canonical" href={canonicalURL}>
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, Astro.site)}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(ogImage, Astro.site)}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <title>{title}</title>
</head>
<body>
  <!-- Navigation -->
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="nav-logo">[Sixarms]</a>
      
      <div class="nav-links">
        <a href="/#features" class="nav-link">Features</a>
        <a href="/download" class="nav-link">Download</a>
        <a href="https://github.com/anthropics/sixarms" target="_blank" rel="noopener" class="nav-link">GitHub</a>
      </div>
      
      <a 
        href="https://github.com/anthropics/sixarms" 
        target="_blank" 
        rel="noopener" 
        class="nav-star"
      >
        <span class="star-icon">★</span> Star
      </a>
    </div>
  </nav>

  <!-- Main Content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-brand">
        Sixarms © {new Date().getFullYear()}
      </div>
      
      <nav class="footer-links">
        <a href="https://github.com/anthropics/sixarms" target="_blank" rel="noopener">GitHub</a>
        <a href="/download">Download</a>
        <a href="/privacy">Privacy</a>
        <a href="/terms">Terms</a>
      </nav>
      
      <p class="footer-tagline">
        Made with ♥ for developers who hate writing daily logs
      </p>
    </div>
  </footer>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
  }
  
  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 16px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .nav-logo {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-white);
    text-decoration: none;
  }
  
  .nav-logo:hover {
    color: var(--text-primary);
  }
  
  .nav-links {
    display: flex;
    gap: 32px;
  }
  
  .nav-link {
    font-size: 0.9rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: var(--text-white);
  }
  
  .nav-star {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--text-white);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .nav-star:hover {
    border-color: var(--accent-amber);
    color: var(--accent-amber);
  }
  
  .star-icon {
    color: var(--accent-amber);
  }
  
  /* Footer */
  .footer {
    border-top: 1px solid var(--border);
    padding: 40px 20px;
    text-align: center;
  }
  
  .footer-container {
    max-width: var(--max-width);
    margin: 0 auto;
  }
  
  .footer-brand {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 16px;
  }
  
  .footer-links {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 16px;
  }
  
  .footer-links a {
    font-size: 0.85rem;
    color: var(--text-dim);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .footer-links a:hover {
    color: var(--text-primary);
  }
  
  .footer-tagline {
    font-size: 0.8rem;
    color: var(--text-dim);
  }
  
  /* Main content offset for fixed nav */
  main {
    padding-top: 60px;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    
    .footer-links {
      flex-wrap: wrap;
      gap: 16px;
    }
  }
</style>
