<style>
  .legal-page {
    padding: 8rem 0 4rem;
  }

  .legal-header {
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-bottom: none;
    border-radius: 8px 8px 0 0;
    padding: 1rem 1.5rem;
  }

  .file-path {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .legal-content {
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 0 0 8px 8px;
    padding: 2rem;
    max-width: 800px;
  }

  .legal-content h1 {
    font-size: 1.75rem;
    color: var(--accent-green);
    margin-bottom: 0.5rem;
  }

  .last-updated {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-primary);
  }

  .legal-content section {
    margin-bottom: 2rem;
  }

  .legal-content h2 {
    font-size: 1.25rem;
    color: var(--accent-cyan);
    margin-bottom: 1rem;
  }

  .legal-content h3 {
    font-size: 1rem;
    color: var(--text-primary);
    margin: 1rem 0 0.5rem;
  }

  .legal-content p {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .legal-content ul {
    list-style: none;
    margin-bottom: 1rem;
  }

  .legal-content li {
    color: var(--text-secondary);
    padding: 0.25rem 0;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
  }

  .legal-content li::before {
    content: 'â€¢';
    position: absolute;
    left: 0.5rem;
    color: var(--accent-green);
  }

  .legal-content strong {
    color: var(--text-primary);
  }

  .legal-content a {
    color: var(--accent-cyan);
  }

  .code-block {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: 4px;
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
  }

  .code-block code {
    color: var(--text-secondary);
    font-size: 0.8rem;
    white-space: pre-wrap;
    display: block;
  }

  .disclaimer-box {
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.3);
    border-radius: 4px;
    padding: 1rem;
    margin: 1rem 0;
  }

  .disclaimer-box p {
    color: var(--accent-amber);
    font-size: 0.85rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .legal-content {
      padding: 1.5rem;
    }

    .legal-content h1 {
      font-size: 1.5rem;
    }
  }
</style>
