<style>
  .legal-page {
    padding: 80px 20px;
    min-height: calc(100vh - 200px);
  }
  
  .legal-header {
    max-width: 800px;
    margin: 0 auto 48px;
  }
  
  .legal-header h1 {
    margin: 16px 0 8px;
  }
  
  .last-updated {
    color: var(--text-dim);
    font-size: 0.9rem;
  }
  
  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 40px;
  }
  
  .legal-section {
    margin-bottom: 40px;
  }
  
  .legal-section:last-child {
    margin-bottom: 0;
  }
  
  .legal-section h2 {
    color: var(--text-primary);
    font-size: 1.25rem;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border);
  }
  
  .legal-section p {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 12px;
  }
  
  .legal-section ul {
    list-style: none;
    margin: 12px 0;
  }
  
  .legal-section li {
    color: var(--text-muted);
    padding: 8px 0 8px 20px;
    position: relative;
    line-height: 1.6;
  }
  
  .legal-section li::before {
    content: "â€¢";
    color: var(--text-primary);
    position: absolute;
    left: 0;
  }
  
  .legal-section strong {
    color: var(--text-white);
  }
  
  .license-block,
  .disclaimer-block {
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: 20px;
    margin: 16px 0;
    font-size: 0.85rem;
  }
  
  .license-block p,
  .disclaimer-block p {
    margin-bottom: 12px;
    color: var(--text-dim);
  }
  
  .license-block p:last-child,
  .disclaimer-block p:last-child {
    margin-bottom: 0;
  }
  
  .legal-section a {
    color: var(--accent-cyan);
  }
  
  .legal-section a:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .legal-content {
      padding: 24px;
    }
  }
</style>
