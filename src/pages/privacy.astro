    padding: 8rem 0 4rem;
  }

  .legal-header {
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-bottom: none;
    border-radius: 8px 8px 0 0;
    padding: 1rem 1.5rem;
  }

  .file-path {
