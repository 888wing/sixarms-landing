    color: var(--accent-cyan);
  }

  .code-block {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: 4px;
    padding: 0.75rem 1rem;
    margin: 1rem 0;
    overflow-x: auto;
  }

  .code-block code {
    color: var(--accent-green);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .legal-content {
      padding: 1.5rem;
    }

