    font-size: 1.75rem;
    color: var(--accent-green);
    margin-bottom: 0.5rem;
  }

  .last-updated {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-primary);
  }

  .legal-content section {
    margin-bottom: 2rem;
  }

  .legal-content h2 {
    font-size: 1.25rem;
    color: var(--accent-cyan);
    margin-bottom: 1rem;
  }

  .legal-content h3 {
    font-size: 1rem;
    color: var(--text-primary);
    margin: 1rem 0 0.5rem;
  }

  .legal-content p {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .legal-content ul {
    list-style: none;
    margin-bottom: 1rem;
  }

  .legal-content li {
    color: var(--text-secondary);
    padding: 0.25rem 0;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
  }

