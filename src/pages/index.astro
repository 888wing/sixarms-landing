  <!-- Trust Indicators -->
  <section class="trust-section">
    <div class="trust-container">
      <TrustBadge 
        icon="ðŸ”’" 
        title="100%" 
        subtitle="Local Storage" 
        description="Your data stays on your device"
      />
      <TrustBadge 
        icon="â­" 
        title="MIT" 
        subtitle="Open Source" 
        description="Fully auditable code"
      />
      <TrustBadge 
        icon="ðŸŽ" 
        title="macOS" 
        subtitle="Native App" 
        description="Built for Apple Silicon"
      />
    </div>
  </section>
  
  <!-- Features Section -->
  <section id="features" class="features-section">
    <div class="container">
      <span class="section-label">// FEATURES</span>
      <h2 class="section-title">What Sixarms Does</h2>
      
      <div class="features-grid">
        <!-- Feature 1: Auto Tracking -->
        <div class="feature-card">
          <Terminal title="git-log" class="feature-terminal">
            <div class="terminal-line">
              <span class="terminal-prompt">$</span>
              <span class="terminal-command"> git log --oneline</span>
