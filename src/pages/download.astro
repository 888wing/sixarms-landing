---
import Base from '../layouts/Base.astro';
import Terminal from '../components/Terminal.astro';
import SubscribeForm from '../components/SubscribeForm.astro';
---

<Base title="Download Sixarms - AI-Powered Development Progress Tracker">
  <section class="download-hero">
    <div class="container">
      <h1>Download Sixarms</h1>
      <p class="download-subtitle">Start tracking your development progress today.</p>
    </div>
  </section>
  
  <!-- macOS Download Section -->
  <section class="download-section">
    <div class="container">
      <Terminal title="download" class="download-terminal">
        <div class="terminal-line">
          <span class="terminal-prompt">$</span>
          <span class="terminal-command"> curl -O sixarms.app/download/latest</span>
        </div>
        <div class="terminal-line terminal-output">
          &nbsp;
        </div>
        <div class="terminal-line">
          <span class="progress-bar">████████████████████████████</span>
          <span class="terminal-output"> 100%</span>
        </div>
        <div class="terminal-line terminal-output">
          &nbsp;
        </div>
        <div class="terminal-line">
          <span class="terminal-success">✓</span>
          <span class="terminal-output"> sixarms-1.0.0-universal.dmg downloaded</span>
        </div>
      </Terminal>
      
      <div class="download-cta">
        <a href="https://github.com/anthropics/sixarms/releases/latest" class="btn btn-primary btn-large">
          ⬇ Download for macOS
        </a>
        <p class="download-info">
          Universal (Intel + Apple Silicon)<br>
          <span class="version-info">Version 1.0.0 • ~50 MB</span>
        </p>
      </div>
      
      <div class="requirements">
        <h3>System Requirements</h3>
        <ul class="requirements-list">
          <li>macOS 12.0 (Monterey) or later</li>
          <li>Apple Silicon or Intel processor</li>
          <li>~100MB disk space</li>
        </ul>
      </div>
    </div>
  </section>
  
  <!-- Windows Coming Soon Section -->
  <section class="windows-section">
    <div class="container">
      <Terminal title="windows" class="windows-terminal">
        <div class="terminal-line">
          <span class="terminal-prompt">$</span>
          <span class="terminal-command"> sixarms --platform windows</span>
        </div>
        <div class="terminal-line terminal-output">
          &nbsp;
        </div>
        <div class="terminal-line terminal-output">
          &gt; Windows version: Coming Soon
        </div>
        <div class="terminal-line terminal-output">
          &gt; Enter your email to get notified
        </div>
      </Terminal>
      
      <div class="windows-subscribe">
        <h3>Get notified when Windows version is ready</h3>
        <SubscribeForm source="windows-download-page" />
        <p class="subscribe-note">✓ No spam, only release updates</p>
      </div>
    </div>
  </section>
  
  <!-- Installation Guide -->
  <section class="install-section">
    <div class="container">
      <h2>Installation Guide</h2>
      
      <div class="install-steps">
        <div class="install-step">
          <span class="step-num">1</span>
          <div class="step-content">
            <h4>Download the DMG file</h4>
            <p>Click the download button above to get the latest version.</p>
          </div>
        </div>
        
        <div class="install-step">
          <span class="step-num">2</span>
          <div class="step-content">
            <h4>Open the downloaded file</h4>
            <p>Double-click the .dmg file to mount it.</p>
          </div>
        </div>
        
        <div class="install-step">
          <span class="step-num">3</span>
          <div class="step-content">
            <h4>Drag to Applications</h4>
            <p>Drag the Sixarms icon to your Applications folder.</p>
          </div>
        </div>
        
        <div class="install-step">
          <span class="step-num">4</span>
          <div class="step-content">
            <h4>Launch Sixarms</h4>
            <p>Open Sixarms from your Applications folder.</p>
          </div>
        </div>
        
        <div class="install-step">
          <span class="step-num">5</span>
          <div class="step-content">
            <h4>Grant permissions</h4>
            <p>Allow necessary permissions when prompted (file access for git repos).</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  .download-hero {
    padding: 80px 20px 40px;
    text-align: center;
  }
  
  .download-hero h1 {
    margin-bottom: 12px;
  }
  
  .download-subtitle {
    font-size: 1.1rem;
    color: var(--text-muted);
  }
  
  .download-section {
    padding: 40px 20px 80px;
    text-align: center;
  }
  
  .download-terminal {
    max-width: 600px;
    margin: 0 auto 40px;
    text-align: left;
  }
  
  .progress-bar {
    color: var(--text-primary);
  }
  
  .download-cta {
    margin-bottom: 48px;
  }
  
  .btn-large {
    font-size: 1.2rem;
    padding: 18px 40px;
  }
  
  .download-info {
    margin-top: 16px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }
  
  .version-info {
    color: var(--text-dim);
    font-size: 0.85rem;
  }
  
  .requirements {
    max-width: 400px;
    margin: 0 auto;
    text-align: left;
    padding: 24px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
  }
  
  .requirements h3 {
    font-size: 1rem;
    color: var(--text-primary);
    margin-bottom: 16px;
  }
  
  .requirements-list {
    list-style: none;
  }
  
  .requirements-list li {
    padding: 8px 0;
    color: var(--text-muted);
    font-size: 0.9rem;
    border-bottom: 1px solid var(--border);
  }
  
  .requirements-list li:last-child {
    border-bottom: none;
  }
  
  .requirements-list li::before {
    content: "├── ";
    color: var(--text-dim);
  }
  
  .requirements-list li:last-child::before {
    content: "└── ";
  }
  
  /* Windows Section */
  .windows-section {
    padding: var(--section-padding);
    background: var(--bg-secondary);
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
    text-align: center;
  }
  
  .windows-terminal {
    max-width: 500px;
    margin: 0 auto 32px;
    text-align: left;
  }
  
  .windows-subscribe h3 {
    color: var(--text-white);
    font-size: 1.1rem;
    margin-bottom: 8px;
  }
  
  .subscribe-note {
    font-size: 0.85rem;
    color: var(--text-dim);
  }
  
  /* Installation Section */
  .install-section {
    padding: var(--section-padding);
  }
  
  .install-section h2 {
    text-align: center;
    color: var(--text-primary);
    margin-bottom: 48px;
  }
  
  .install-steps {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .install-step {
    display: flex;
    gap: 20px;
    padding: 20px 0;
    border-bottom: 1px solid var(--border);
  }
  
  .install-step:last-child {
    border-bottom: none;
  }
  
  .step-num {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-tertiary);
    border: 1px solid var(--text-primary);
    border-radius: 50%;
    color: var(--text-primary);
    font-weight: 700;
  }
  
  .step-content h4 {
    color: var(--text-white);
    font-size: 1rem;
    margin-bottom: 4px;
  }
  
  .step-content p {
    font-size: 0.9rem;
    color: var(--text-muted);
  }
  
  @media (max-width: 768px) {
    .download-terminal,
    .windows-terminal {
      max-width: 100%;
    }
  }
</style>
